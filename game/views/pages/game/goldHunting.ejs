<!DOCTYPE html>
<html lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0"/>
  <title>Starter Template - Materialize</title>

  <!-- CSS  -->
  <!--<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">-->
  <link href="../../css/font-awesome.css" rel="stylesheet">
  <link href="../../css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>
  <link href="../../css/goldHunting.css" rel="stylesheet">

</head>
<body>
<div class="section no-pad-bot" id="index-banner">
  <div class="section">
    <!--   Icon Section   -->
    <div class="row firstRow">
      <div class="col s12 m2">
        <div class="icon-block sectionLeft">
          <div class="center titleLeft">GOLD HUNTING</div>
          <div class="center titleLeft">ROUND <span id="nbRound">1</span> / <%- maxRound %></div>
        </div>
      </div>

      <div class="col s12 m8 central">
        <div class="icon-block sectionCenter">
          <table class="tableCricket">
            <tbody>
              <tr>
                <% for(var i=1; i <= nbPlayer; i++) { %>
                  <% if(i === 1){ %>
                    <td class="tdGame tdPlayer<%-i %> selected"></td>
                  <% }else{ %>
                    <td class="tdGame tdPlayer<%-i %>"></td>
<!--                    <tr id="trCatchUp"></tr>-->
<!--                    <tr id="trNumber"></tr>-->
<!--                    <tr id="trGotU"></tr>-->
<!--                    <tr id="trBust"></tr>-->
                <% } %>
                <% } %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="col s12 m2">

      </div>
    </div>
    
    <div class="row">
      <div class="col s12 center">
        <div class="player-names-container" style="margin-bottom: 20px;">
          <% for(var i=1; i <= nbPlayer; i++) { %>
            <div class="player-name <% if(i === 1){ %>active<% } %>" data-player="<%-i %>">
              <% if(typeof playerNames !== 'undefined' && playerNames[i-1]) { %>
                <%- playerNames[i-1] %>
              <% } else { %>
                Joueur <%- i %>
              <% } %>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
  <div class="section">

    <!--   Icon Section   -->
    <div class="row">
      <div class="col s12 m2">
      </div>
      <div class="col s12 m8">
        <div class="row">
          <div class="col s12 m4">
            <div class="icon-block lastDart center" id="throw1">
              -
            </div>
          </div>
          <div class="col s12 m4">
            <div class="icon-block lastDart center" id="throw2">
              -
            </div>
          </div>
          <div class="col s12 m4">
            <div class="icon-block lastDart center" id="throw3">
              -
            </div>
          </div>
        </div>
      </div>
      <div class="col s12 m2">
      </div>
    </div>

  </div>
  <div class="section">

    <!--   Icon Section   -->
    <div class="row">
      <% for(var i=1; i<=nbPlayer; i++) {%>
        <div class="col s12 m3">
          <div id="zoneScorePlayer<%- i %>" class="icon-block scorePlayer <% if(i === 1){%>selected<%}%>">
            <div class="center titlePlayer"><%= playerNames[i-1] || 'Joueur ' + i %></div>
            <div id="scoreTotal<%- i %>" class="center scoreP">
              0
            </div>
          </div>
        </div>
      <% } %>

    </div>

  </div>
</div>
<div id="changePlayer">
  CHANGE PLAYER
</div>
<div id="newGame">
  Play again ?
</div>
<div id="timeExceed">
  A QUELLE HEURE ?!
</div>
<div id="returnMenu">
  Return menu ?
</div>
<div id="zonevictory">
  Victory : <span id="zonevictoryPlayer"></span>
</div>
<div id="zonebtnno">
  NO <i class="fa fa-circle" style="color: red;"></i>
</div>
<div id="zonebtyes">
  YES <i class="fa fa-circle" style="color: blue;"></i>
</div>
<!--  Scripts-->
<script src="../../js/jquery-2.1.1.min.js"></script>
<script src="../../js/materialize.min.js"></script>
<script src="../../js/socket.io.js"></script>
<script src="../../js/dart_target_matrix.js"></script>
<script>
  let nombrePlayer = parseInt("<%- nbPlayer %>");
  let maxRound = parseInt("<%- maxRound %>");
  let arrayTargets = JSON.parse('<%- JSON.stringify(arrayTargets) %>');
</script>
<script src="../../js/game/statsManager.js"></script>
<script src="../../js/game/mainDisplay.js"></script>
<script src="../../js/game/main.js"></script>
<script src="../../js/game/goldHunting.js"></script>
</body>
</html>
