<!DOCTYPE html>
<html lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0"/>
  <title>Starter Template - Materialize</title>

  <!-- CSS  -->
  <!--<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">-->
  <link href="../../css/font-awesome.css" rel="stylesheet">
  <link href="../../css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>
  <link href="../../css/501.css" rel="stylesheet">

</head>
<body>
  <div class="section no-pad-bot" id="index-banner">
    <div class="section">
        <!--   Icon Section   -->
        <div class="row">
          <div class="col s12 m3">
            <% for(var i=1; i<=nbPlayer; i++) {%>
              <div class="">
                <div id="zoneScorePlayer<%- i %>" class=" titlePlayer icon-block row scorePlayer <% if(i === 1){%>selected<%}%>">
                  <div class="col m7 center ">PLAYER <%- i %></div>
                  <div class="col m5 center" id="scoreTotal<%- i %>">
                    <div id="score">
                      0
                    </div>
                  </div>
                </div>
              </div>
            <% } %>
          </div>

          <div class="col s12 m7">
            <div class="icon-block sectionCenter">
             <div id="scoreCurrentPlayer">
               <%- mode %>
             </div>

            </div>
            <div class="row">
              <div class="col s12 m4">
                <div class="icon-block lastDart center" id="throw1">
                  -
                </div>
              </div>
              <div class="col s12 m4">
                <div class="icon-block lastDart center" id="throw2">
                  -
                </div>
              </div>
              <div class="col s12 m4">
                <div class="icon-block lastDart center" id="throw3">
                  -
                </div>
              </div>
            </div>
          </div>

          <div class="col s12 m2">
            <div class="icon-block sectionLeft">
              <div class="center titleLeft"><%- mode %></div>
              <div class="center titleLeft">ROUND <span id="nbRound">1</span> / <%- maxRound %></div>
              <div class="center tableLeft">
                <table>
                  <tbody>
                    <tr id="HistoryRound1">
                      <td class="title">R1 :</td>
                      <td class="T1"></td>
                      <td class="T2"></td>
                      <td class="T3"></td>
                    </tr>
                    <tr id="HistoryRound2">
                      <td class="title"></td>
                      <td class="T1"></td>
                      <td class="T2"></td>
                      <td class="T3"></td>
                    </tr>
                    <tr id="HistoryRound3">
                      <td class="title"></td>
                      <td class="T1"></td>
                      <td class="T2"></td>
                      <td class="T3"></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
        </div>
      </div>
  </div>
    <div class="section">

      <!--   Icon Section   -->
      <div class="row">
        <div class="col s12 m2">
        </div>
        <div class="col s12 m8">

        </div>
        <div class="col s12 m2">
        </div>
      </div>
    </div>
  </div>
  <div id="changePlayer">
    CHANGE PLAYER
  </div>
  <div id="newGame">
    Play again ?
  </div>
  <div id="timeExceed">
    A QUELLE HEURE ?!
  </div>
  <div id="returnMenu">
    Return menu ?
  </div>
  <div id="zonevictory">
    Victory : <span id="zonevictoryPlayer"></span>
  </div>
  <div id="zonebtnno">
    NO <i class="fa fa-circle" style="color: red;"></i>
  </div>
  <div id="zonebtyes">
    YES <i class="fa fa-circle" style="color: blue;"></i>
  </div>
  <!--  Scripts-->
  <script src="../../js/jquery-2.1.1.min.js"></script>
  <script src="../../js/materialize.min.js"></script>
  <script src="../../js/socket.io.js"></script>
  <script src="../../js/dart_target_matrix.js"></script>
  <script>
    let nombrePlayer = <%- nbPlayer %>;
    let maxRound = <%- maxRound %>;
    let arrayTargets = <%- JSON.stringify(arrayTargets) %>;
    let mode = <%- mode %>;
  </script>
  <script src="../../js/game/main.js"></script>
  <script src="../../js/game/mainDisplay.js"></script>
  <script src="../../js/game/501.js"></script>
</body>
</html>
